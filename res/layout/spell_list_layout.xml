<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jt.getdunked.ChampionActivity$PlaceholderFragment" >

    <com.jt.getdunked.RoboLightTextView
        android:id="@+id/tv_spell_title"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="test"
        android:textColor="#000000"
        android:textSize="18sp" />

    <com.jt.getdunked.RoboLightTextView
        android:id="@+id/section_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_spell_title"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/iv_spell_one"
        android:text="test"
        android:textColor="#333333" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_spell_one"
        android:layout_centerVertical="true"
        android:contentDescription="How&apos;d you get here?" />

    <ImageView
        android:id="@+id/iv_spell_two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image"
        android:contentDescription="Spell icon"
        android:src="@drawable/aatroxsquare" />

    <ImageView
        android:id="@+id/iv_spell_one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/image"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_spell_title"
        android:contentDescription="Spell icon"
        android:src="@drawable/aatroxsquare" />

</RelativeLayout>